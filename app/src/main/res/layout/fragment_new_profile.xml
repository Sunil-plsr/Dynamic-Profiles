<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tvs.promark.NewProfile">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:padding="10dp"
                    android:text="@string/new_profile_title"
                    android:id="@+id/new_profile_title" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/profileNameField"
                    android:textAlignment="center"
                    android:hint="@string/profile_name_hint"
                    android:textColor="#de0a0b5c" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/active_profile"
                    android:layout_marginBottom="5dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/stimuli"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="#66888888"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_height="25dp"
                            app:srcCompat="@mipmap/ic_network_wifi_black_24dp"
                            android:id="@+id/imageView"
                            android:layout_width="25dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="@string/wifi_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView11"
                                android:textColor="?android:attr/textColorTertiary"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="@string/wifi_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|italic"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <Switch
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:id="@+id/wifiSwitch"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_height="25dp"
                            app:srcCompat="@mipmap/ic_network_cell_black_24dp"
                            android:layout_width="25dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="@string/cell_tower_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorTertiary"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="@string/cell_network_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|italic"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <Switch
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:id="@+id/cellNetwork"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_height="25dp"
                            app:srcCompat="@mipmap/ic_add_alarm_black_24dp"
                            android:layout_width="25dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="@string/time_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorTertiary"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="@string/time_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|italic"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <ImageView
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:id="@+id/timeClicker"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            app:srcCompat="@android:drawable/ic_menu_edit" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_height="25dp"
                            app:srcCompat="@mipmap/ic_battery_std_black_24dp"
                            android:layout_width="25dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="@string/battery_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorTertiary"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="@string/battery_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|italic"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            android:id="@+id/batteryClicker"
                            app:srcCompat="@android:drawable/ic_menu_edit" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/active_profile"
                    android:layout_marginBottom="5dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/responses_title"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="#66888888"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_height="25dp"
                            app:srcCompat="@mipmap/ic_network_wifi_black_24dp"
                            android:layout_width="25dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="@string/wifi_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorTertiary"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="@string/wifi_resp_msh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|italic"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <Switch
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:id="@+id/wifiResponse"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_height="25dp"
                            app:srcCompat="@mipmap/ic_bluetooth_black_24dp"
                            android:layout_width="25dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="@string/bluetooth_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorTertiary"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="@string/bluetooth_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|italic"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <Switch
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:id="@+id/bluetoothResponse"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_height="25dp"
                            app:srcCompat="@mipmap/ic_brightness_auto_black_24dp"
                            android:layout_width="25dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="@string/brightness_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorTertiary"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="@string/brightness_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|italic"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <Switch
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:id="@+id/autoBrightness"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_height="25dp"
                            app:srcCompat="@mipmap/ic_volume_up_black_24dp"
                            android:layout_width="25dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:text="@string/volume_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?android:attr/textColorTertiary"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:text="@string/volume_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|italic"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            android:id="@+id/volumeClicker"
                            app:srcCompat="@android:drawable/ic_menu_edit" />

                        <!--<CheckBox
                            android:layout_width="51dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center_horizontal|center_vertical"
                            android:id="@+id/volumeCheckbox" />-->

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:text="@android:string/cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/cancelNewProfile"
                        android:layout_weight="1" />

                    <Button
                        android:text="@string/create_profile_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/createProfileBtn"
                        android:layout_weight="1" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>
